{
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "panel": "new"
  },
  "tasks": [
    {
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "shell",
      "label": "Run",
      "command": "cabal v2-run blossom-exe -O0 -- example/IntTree.bl -v"
    },
    {
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "type": "shell",
      "label": "Profile",
      // FYI, for some reason, the "--enable-profiling" optoin makes cabal
      // compile twice... :(
      "command": "cabal v2-run blossom-prof -O2 -fprof --enable-profiling -- example/IntTree.bl -v"
    },
    {
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "type": "shell",
      "label": "Test All",
      "command": "cabal v2-test all -O0"
    },
    {
      "group": {
        "kind": "none",
        "isDefault": false
      },
      "type": "shell",
      "label": "Reinstall Dependencies",
      "command": "cabal v2-build all -O2 -j4 --only-dependencies --reinstall --enable-profiling",
      "problemMatcher": []
    },
    {
      "group": {
        "kind": "none",
        "isDefault": false
      },
      "type": "shell",
      "label": "Happy info",
      "command": "happy src/Blossom/Parsing/Parser.y -d -i -s -g -c -a; rm ./src/Blossom/Parsing/Parser.hs",
      "problemMatcher": []
    }
  ]
}
